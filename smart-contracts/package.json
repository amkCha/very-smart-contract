{
  "name": "very-smart-contract-smart-contracts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "compile": "truffle compile",
    "dashboard": "truffle dashboard",
    "lint": "npm run lint:sol && npm run prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "migrate:dashboard": "truffle migrate --network dashboard",
    "migrate:goerli": "truffle migrate --network goerli",
    "migrate:linea": "truffle migrate --network linea",
    "migrate:local": "truffle migrate --network development",
    "migrate:sepolia": "truffle migrate --network sepolia",
    "prettier": "prettier --config ./.prettierrc.yaml --write \"**/*.{js,json,md,sol,ts,yaml,yml}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml \"**/*.{js,json,md,sol,ts,yaml,yml}\"",
    "test": "truffle test",
    "verify:goerli": "truffle run verify VSCCoin --network goerli",
    "verify:linea": "truffle run verify VSCCoin --network linea",
    "verify:sepolia": "truffle run verify VSCCoin --network sepolia"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "^4.8.3",
    "@truffle/hdwallet-provider": "^2.1.10",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "^5.7.2",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "truffle": "^5.8.4",
    "truffle-assertions": "^0.9.2",
    "truffle-plugin-verify": "^0.6.3"
  }
}
